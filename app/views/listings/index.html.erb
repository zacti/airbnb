	<div>

<% if signed_in? -%>
	<div id="first">
	<h1 class="listingindex">Listings</h1>
	<p>
	Discover entire homes and private rooms perfect for any trip.

	</p>
</div>
	<div class="createbutton">	<%= link_to "Create", new_listing_path, class:"btn btn-primary btn-lg"%></div>

	<div>

	<%@listall.each do |listing| %>
	<div id="listofall">
		<div class="listimage">

		<%= link_to listing do%>
		
		<%=image_tag listing.image.url.to_s,:size => "300x200" if listing.image %>

		
		<% end %>	

		</div>
		<h1><%=listing.title%><br></h1>
		<%=listing.description%><br>
		<%=listing.location%><br>
		<%=listing.amenities%>
		Listed by:<%= listing.user.email%>
		<div>
		<%= link_to 'Reserve This Place', new_listing_reservation_path(listing),class:"btn btn-warning btn-lg btn-block"%>

		<%= link_to 'Delete', listing_path(listing), method: :delete,data: { confirm: 'Press OK and get lost!' }, class:"btn btn-danger"%>
		<%= link_to "Edit", edit_listing_path(listing) ,class:"btn btn-secondary"%><br>
	</div>
	</div>
	<%end%>	
    <% else -%>
    <div id="signinbutt">
          <%= link_to t(".sign_in"), sign_in_path %>
      </div>

    <% end -%>



    
</div>
</div>
<footer>
	    <%= paginate @listall %>
</footer>
</body>

